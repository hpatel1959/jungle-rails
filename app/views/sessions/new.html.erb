<h1 class="page-title">Login</h1>

<%= form_tag '/login', html: { class: 'form-group' } do %>
  <div class="form-group login-form-detail">
    <label for="exampleInputEmail1">Email address</label>
    <%= text_field_tag :email, nil, class: "form-control", id: "exampleInputEmail1", aria_describedby: "emailHelp", placeholder: "Enter email" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group login-form-detail">
    <label for="exampleInputPassword1">Password</label>
    <%= password_field_tag :password, nil, class: "form-control", id: "exampleInputPassword1", placeholder: "Password" %>
  </div>
  <div class="submit-container">
    <%= submit_tag "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

